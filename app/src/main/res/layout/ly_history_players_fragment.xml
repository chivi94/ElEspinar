<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fragment_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_players_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fragment_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/textTitleColor"
                android:textSize="25dp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/history_players_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fragment_margin"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="@dimen/fragment_margin"
                android:layout_marginLeft="@dimen/fragment_margin"
                android:layout_marginRight="@dimen/fragment_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/textColor" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
