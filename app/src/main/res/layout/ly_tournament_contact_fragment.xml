<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fragment_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tournament_contact_open"
                    style="@style/titleTextStyle"
                    android:text="@string/tournament_contact_open" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tournament_contact_secretary_phone"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_secretary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tournament_office_phone"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_office" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tournament_contact_before1"
                    style="@style/titleTextStyle"
                    android:text="@string/tournament_contact_before1"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tournament_contact_before2"
                    style="@style/textStyle"
                    android:text="@string/tournament_contact_before2"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tournament_contact_before_phone_number"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_before_phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tournament_contact_before_email_address"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_before_email"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tournament_contact_com"
                    style="@style/titleTextStyle"
                    android:text="@string/tournament_contact_com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tournament_contact_com_email_address"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_before_email"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="80dp">

                <Button
                    android:id="@+id/tournament_contact_com_phone_number"
                    style="@style/buttonStyle"
                    android:text="@string/tournament_contact_before_phone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
